<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <h1>List: <%= @list.title %></h1>
      <p>Description: <%= @list.category %>
      <br><%= link_to 'Edit', edit_list_path(@list) %>
      <br><%= link_to 'Delete', list_path(@list), method: :delete, data: { confirm: 'Are you sure?' } %>
      </p>
      <br><br>
      <table class="table">
        <thead>
          <tr>
            <th>Task</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render @list.items %>
        </tbody>
      </table>
      <%= render "items/form" %>
    </div>
  </div>
</div>
